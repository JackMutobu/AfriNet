@using AfriNetSharedClientLib.Common.Bundles;

<div class="bg-neutral-100 grid grid-cols-10 gap-4 items-center px-2">
    <div class="bg-red-500 rounded-full h-9 w-9 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg"
             fill="none"
             viewBox="0 0 24 24"
             stroke-width="1.5"
             stroke="currentColor"
             class="w-6 h-6 text-neutral-100">
            <path stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
        </svg>
    </div>
    <div class="col-span-5 py-1 px-2">
        <h1 class=" text-sm font-medium">Recharge de forfait</h1>
        <p class=" text-gray-600 text-sm">@Transaction.Retailer</p>
    </div>
    <div class="col-span-4 flex flex-col items-end">
        <h1 class="text-sm font-bold">@BundleService.GetBundleSize(string.Empty, Transaction.Data)</h1>
        <p class="text-sm text-gray-600">@Transaction.Date.ToLocalTime().ToShortDateString() à @Transaction.Date.ToLocalTime().ToShortTimeString()</p>
    </div>
</div>
@code
{
    [Inject] IBundleService BundleService { get; set; } = null!;

    [Parameter] public required Transaction Transaction { get; set; } = null!;
}